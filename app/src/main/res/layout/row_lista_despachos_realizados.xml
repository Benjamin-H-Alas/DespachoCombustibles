<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >

    <TextView
        android:id="@+id/tvr_Envio"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvr_hllega"
        android:layout_marginBottom="2dp"
        android:padding="5dp"
        android:text="ENV: 100000"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tvr_hllega"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvr_nomcargador"
        android:layout_marginBottom="66dp"
        android:padding="5dp"
        android:text="HLLEGADA"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tvr_hcarga"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvr_nomcargador"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="34dp"
        android:layout_toStartOf="@+id/tvr_hsalida"
        android:layout_toLeftOf="@+id/tvr_hsalida"
        android:padding="5dp"
        android:text="H CARGA"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tvr_hsalida"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_llave"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="-42dp"
        android:layout_marginRight="-42dp"
        android:layout_toStartOf="@+id/imgv_candado"
        android:layout_toLeftOf="@+id/imgv_candado"
        android:padding="5dp"
        android:text="H SALIDA"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tvr_placa"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvr_nomcargador"
        android:layout_marginStart="-8dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginBottom="71dp"
        android:layout_toEndOf="@+id/tvr_hllega"
        android:layout_toRightOf="@+id/tvr_hllega"
        android:padding="5dp"
        android:text="Placa"
        android:textColor="#333" />

    <TextView
        android:id="@+id/tvr_nomcargador"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgv_candado"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:padding="5dp"
        android:text="CARGADOR"
        android:textColor="#333" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgv_candado"
        android:src="@drawable/open"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_llave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_toStartOf="@+id/imgv_candado"
        android:layout_toLeftOf="@+id/imgv_candado"
        android:padding="5dp"
        android:text="LLAVE: 12"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvr_num_taco"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TACO: 4548"
        android:textColor="#333" />

</RelativeLayout>